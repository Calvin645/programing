#include <math.h>
int main(void) {
  float pricipal_amount, rate, time, compound_interest;
  printf("Enter the principal amount: ");
  scanf("%f", &pricipal_amount);
  printf("Enter the rate of interest: ");
  scanf("%f", &rate);
  printf("Enter the time period: ");
  scanf("%f", &time);
  compound_interest = pricipal_amount * pow((1 + rate/100), time) - pricipal_amount;
  printf("The compound interest is: %f", compound_interest);
  return 0;
  
    
  
}

#include <stdio.h>

int main() {
  int age;
  float annual_income;
  printf("Enter your age: ");
  scanf("%d", &age);
  printf("Enter your annual income: ");
  scanf("%f", &annual_income);
  if (age >= 18 && annual_income >= 21000) {
    printf("Congratulation you qualify for a loan.\n");
  } else {
    printf("Unfortunately, we are unable to offer you a loan");
  }
  return 0;
}
